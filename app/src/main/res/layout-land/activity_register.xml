<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">


    <Button
        android:id="@+id/createAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailRegister"
        android:layout_alignStart="@+id/emailRegister"
        android:layout_alignEnd="@+id/emailRegister"
        android:layout_marginStart="377dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/createAccount"
        android:textStyle="bold"
        app:iconTint="#FFFFFF" />

    <Button
        android:id="@+id/verifyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailRegister"
        android:layout_alignStart="@+id/emailRegister"
        android:layout_alignEnd="@+id/emailRegister"
        android:layout_marginStart="190dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="248dp"
        android:text="@string/verify_email" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:text="@string/gymside"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/emailRegister"
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/passwordRegister"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="63dp"
        android:autofillHints=""
        android:drawableEnd="@drawable/baseline_email_blackk_18dp"
        android:fontFamily="sans-serif-light"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:text="@string/email" />

    <EditText
        android:id="@+id/usernameRegister"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="63dp"
        android:autofillHints="@string/username"
        android:drawableEnd="@drawable/baseline_person_blackk_18dp"
        android:fontFamily="sans-serif-light"
        android:hint="@string/username"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="@string/username" />

    <EditText
        android:id="@+id/passwordRegister"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/usernameRegister"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="63dp"
        android:autofillHints="@string/username"
        android:drawableEnd="@drawable/baseline_lock_blackk_18dp"
        android:fontFamily="sans-serif-light"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="@string/password" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailRegister"
        android:layout_alignStart="@+id/emailRegister"
        android:layout_marginStart="11dp"
        android:layout_marginTop="44dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/cancel"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/showErrorText"
        android:layout_width="163dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="268dp"
        android:layout_marginEnd="68dp"
        android:textColor="#FF0000" />


</RelativeLayout>
</androidx.core.widget.NestedScrollView>