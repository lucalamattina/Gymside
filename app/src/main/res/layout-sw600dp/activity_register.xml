<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">


    <Button
        android:id="@+id/createAccount"
        android:layout_width="625dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1083dp"
        android:layout_marginEnd="166dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/createAccount"
        android:textStyle="bold"
        app:iconTint="#FFFFFF" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="265dp"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="164dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="667dp"
        android:layout_toStartOf="@+id/buttonRegister"
        android:fontFamily="sans-serif-light"
        android:text="@string/cancel"
        android:textStyle="bold" />

    <Button
        android:id="@+id/verifyView"
        android:layout_width="268dp"
        android:layout_height="146dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="526dp"
        android:layout_marginEnd="166dp"
        android:layout_marginBottom="663dp"
        android:text="@string/verify_email" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="337dp"
        android:layout_height="122dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="330dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="293dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/gymside"
        android:textSize="80sp" />

    <EditText
        android:id="@+id/emailRegister"
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/passwordRegister"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="69dp"
        android:autofillHints=""
        android:drawableEnd="@drawable/baseline_email_blackk_18dp"
        android:fontFamily="sans-serif-light"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:text="@string/email"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/passwordRegister"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/usernameRegister"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="68dp"
        android:autofillHints="@string/username"
        android:drawableEnd="@drawable/baseline_lock_blackk_18dp"
        android:fontFamily="sans-serif-light"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="@string/password"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/usernameRegister"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="469dp"
        android:layout_marginEnd="68dp"
        android:autofillHints="@string/username"
        android:drawableEnd="@drawable/baseline_person_blackk_18dp"
        android:fontFamily="sans-serif-light"
        android:hint="@string/username"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="@string/username"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/showErrorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="319dp"
        android:textColor="#FF0000" />


</RelativeLayout>
</androidx.core.widget.NestedScrollView>